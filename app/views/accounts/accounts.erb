<h1>Hello, <%=@user.full_name%></h1>

<% if @accounts %>
  <% @accounts.each do |account| %>
    <p><label for="account_number">Account Number:</label><%= account.account_number %></p>
    <p><label for="balance">Balance:</label><%= account.balance %></p>
  <% end %>
<% else %> 
  <p>You don't have any open accounts.</p>
<% end %>

<h4>Open An Account: </h4>
<form action='/accounts/new' method="get">
  <input type="submit" value="Open Account">
</form>
